
altura = float (input('Digite a sua altura para saber seu peso ideal:'))
s =  str(input('Qual o seu Sexo:'))

if  s == 'F':
    peso = 62.1 * altura - 44.7
    print ('O seu peso ideal é: {:.2f}'.format(peso))
else:
    peso = 72.7 * altura - 58
    print('O seu peso ideal é: {:.2f}'.format(peso))
