par = 0
impar = 0
negativo = 0
positivo = 0

for r in range(5):
    x = int((input('Digite um valor:')))
    if x % 2 == 0:
        par = par + 1
    elif x % 2 != 0:
        impar = impar + 1
    if x < 0:
        negativo = negativo + 1
    elif x > 0:
        positivo =  positivo + 1

        
print('{} valor(es )par(es) '.format(par))
print('{} valor(es) impar (es)'.format(impar))
print('{} valor(es) positivo (s)'.format(positivo))
print('{} valor (es) negativo (s)'.format(negativo))


